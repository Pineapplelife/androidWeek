<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseConvertActivity">

    <ImageView
        android:id="@+id/usaFlagImage"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintBottom_toTopOf="@+id/britishFlagImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/usa_flag" />

    <ImageView
        android:id="@+id/britishFlagImage"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintBottom_toTopOf="@+id/japanFlagImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usaFlagImage"
        app:srcCompat="@drawable/british_flag" />

    <ImageView
        android:id="@+id/japanFlagImage"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/britishFlagImage"
        app:srcCompat="@drawable/japan_flag" />

    <Button
        android:id="@+id/dollarConvertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dollar Convert"
        app:layout_constraintBottom_toBottomOf="@+id/usaFlagImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/usaFlagImage"
        app:layout_constraintTop_toTopOf="@+id/usaFlagImage" />

    <Button
        android:id="@+id/poundConvertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pound Convert"
        app:layout_constraintBottom_toBottomOf="@+id/britishFlagImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/britishFlagImage"
        app:layout_constraintTop_toTopOf="@+id/britishFlagImage" />

    <Button
        android:id="@+id/yenConvertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yen convert"
        app:layout_constraintBottom_toBottomOf="@+id/japanFlagImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/japanFlagImage"
        app:layout_constraintTop_toTopOf="@+id/japanFlagImage" />
</androidx.constraintlayout.widget.ConstraintLayout>